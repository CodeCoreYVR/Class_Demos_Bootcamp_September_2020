<!-- views/posts/new.ejs -->
<%- include("../partials/header") %>
<h1>Edit Post</h1>
<form method="POST" action="/posts/<%=post.id%>">
    <!-- Here method will remain POST bu the action path will be releveant to the particular post -->
    <!-- We will also pass hidden field in this form , whixh will be changed by methodOverRide in Index.js -->
    <input type="hidden" name="_method" value="PATCH">
    <div class="form-group">
        <input type="text" class='form-control' name="title" placeholder="Enter the title" value="<%=post.title %>"/>
    </div>
    <div class="form-group">
        <input type="url" name="imageUrl" class="form-control" placeholder="e.g. http://imgur.com/pic.jpg" value="<%=post.imageUrl %>"/> 
        </div>
    <div class="form-group">
        <textarea class="form-control" name="content" placeholder="What are your thoughts ?"><%=post.content %>"
            
            </textarea>
        </div>
    
    <input type="submit" class='btn btn-outline-success' value="Submit"/>
</form>

<%- include("../partials/footer") %>