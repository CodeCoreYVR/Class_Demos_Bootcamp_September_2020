<%- include("./partials/header") %>

<h1>Edit Quack</h1>

<form action="/quacks/<%= quack.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH" />
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="img_url">Image URL</label>
      <input name="img_url" type="text" class="form-control" id="img_url" value="<%= quack.img_url %>">
    </div>
    <div class="form-group col-md-6">
      <label for="content">Quack Content</label>
      <input name="content" type="text" class="form-control" id="content" value="<%= quack.content %>">
    </div>
  </div>
  <button type="submit" class="btn btn-warning">Edit Quack</button>
</form>

<%- include("./partials/footer") %>